<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/w4"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/slevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Select level"
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <Button
        android:id="@+id/btn_javalevel1"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="35dp"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:text="Easy"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="italic"
        android:backgroundTint="#ffffff"
        android:outlineProvider="bounds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slevel"/>

    <Button
        android:id="@+id/btn_javalevel2"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="35dp"
        android:padding="20px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:text="Medium"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="italic"
        android:outlineProvider="bounds"
        app:backgroundTint="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/btn_javalevel1"
        />

    <Button
        android:id="@+id/btn_javalevel3"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="35dp"
        android:layout_marginTop="252dp"
        android:padding="20px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:text="Hard"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:outlineProvider="bounds"
        android:textSize="30dp"
        app:backgroundTint="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/btn_javalevel2"
         />

</androidx.constraintlayout.widget.ConstraintLayout>